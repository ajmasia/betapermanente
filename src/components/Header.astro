---
interface NavItem {
  label: string;
  href: string;
  children?: NavItem[];
}

export interface Navigation {
  es: NavItem[];
  en?: NavItem[];
}

interface Props {
  navigation: Navigation;
}

const { navigation } = Astro.props;
---

<header
  class="lg:w-full flex flex-col lg:flex-row lg:justify-between py-6 max-w-6xl px-4 lg:px-0 lg:mx-auto"
>
  <div class="whitespace-nowrap text-xl"><a href="/">Beta Permanente</a></div>
  <nav class="hidden w-full lg:flex lg:items-center lg:gap-8 lg:justify-end">
    <ul
      class="flex flex-col lg:flex-row list-none m-0 p-0 gap-4 lg:gap-8 items-center;"
    >
      {
        navigation.es.map((item) => (
          <li class="relative text-center space-y-4 lg:space-y-0">
            <a href={item.href}>{item.label}</a>
          </li>
        ))
      }
      <!-- TODO: Theme switcher -->
      <!-- TODO: Lang switcher -->
    </ul>
  </nav>
</header>
