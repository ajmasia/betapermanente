---
// BackToTop Component
---

<button
  id="back-to-top"
  aria-label="Volver arriba"
  class="fixed bottom-8 right-4 sm:right-8 z-50 h-8 w-8 sm:h-12 sm:w-12 rounded-full bg-red-400 text-white shadow-lg transition-all duration-300 hover:bg-red-500 opacity-0 pointer-events-none"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    class="h-4 w-4 sm:h-6 sm:w-6 mx-auto"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M4.5 15.75l7.5-7.5 7.5 7.5"></path>
  </svg>
</button>

<script>
  const initBackToTop = () => {
    const backToTopButton = document.getElementById("back-to-top");

    if (!backToTopButton) return;

    // Check if we're on mobile (less than 640px - Tailwind's sm breakpoint)
    const isMobile = () => window.innerWidth < 640;

    // Calculate if we're near the bottom of the page
    const isNearPageEnd = () => {
      const scrollTop = window.scrollY;
      const windowHeight = window.innerHeight;
      const documentHeight = document.documentElement.scrollHeight;
      // Consider "near end" when within 150px of the bottom
      return scrollTop + windowHeight >= documentHeight - 150;
    };

    // Show/hide button and adjust position based on scroll
    const toggleButtonVisibility = () => {
      if (window.scrollY > 300) {
        backToTopButton.classList.remove("opacity-0", "pointer-events-none");
        backToTopButton.classList.add("opacity-100");
      } else {
        backToTopButton.classList.remove("opacity-100");
        backToTopButton.classList.add("opacity-0", "pointer-events-none");
      }

      // On mobile, move button up when near page end to avoid footer collision
      if (isMobile() && isNearPageEnd()) {
        backToTopButton.style.bottom = "6rem"; // Move up above footer
      } else {
        backToTopButton.style.bottom = ""; // Reset to CSS default (2rem)
      }
    };

    // Scroll to top smoothly
    const scrollToTop = () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    };

    // Remove existing listeners to avoid duplicates
    window.removeEventListener("scroll", toggleButtonVisibility);
    backToTopButton.removeEventListener("click", scrollToTop);

    // Add event listeners
    window.addEventListener("scroll", toggleButtonVisibility);
    backToTopButton.addEventListener("click", scrollToTop);

    // Initial check
    toggleButtonVisibility();
  };

  // Initialize on page load
  initBackToTop();

  // Reinitialize after View Transitions
  document.addEventListener("astro:page-load", initBackToTop);
</script>
