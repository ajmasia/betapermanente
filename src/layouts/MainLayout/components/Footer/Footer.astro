---
import { version } from "../../../../../package.json";
import { SITE } from "../../../../config.ts";
---

<footer class="mt-auto py-10 bg-slate-100 dark:bg-gray-800 dark:text-slate-400">
  <div class="container mx-auto flex flex-col gap-2">
    {/* copyright */}
    <div class="flex flex-wrap justify-center break-words text-center text-sm">
      <span class="px-1">Contenido publicado bajo licencia</span>
      <a
        href="https://creativecommons.org/licenses/by-nc-sa/4.0/deed.es"
        class="link px-1"
      >
        Creative Commons BY-NC-SA 4.0
      </a>
    </div>

    {/* legal links */}
    <div class="flex flex-wrap justify-center items-center gap-2 text-xs">
      <a href="/aviso-legal" class="link">Aviso Legal</a>
      <span>·</span>
      <a href="/privacidad" class="link">Privacidad</a>
      <span>·</span>
      <a href="/cookies" class="link">Cookies</a>
    </div>

    {/* version and author */}
    <div
      class="flex flex-wrap justify-center items-center gap-1 text-xs text-slate-500 dark:text-slate-500"
    >
      <span>{SITE.title} v{version}</span>
      <span>·</span>
      <span>Desarrollado con Astro</span>
      <span class="hidden sm:inline">·</span>
      <span>
        <a
          href="https://github.com/ajmasia/permanentbeta.dev"
          target="_blank"
          rel="noopener noreferrer"
          class="link">Código</a
        >
        bajo Licencia <a
          href="https://github.com/ajmasia/permanentbeta.dev/blob/main/LICENSE"
          target="_blank"
          rel="noopener noreferrer"
          class="link">GNU General Public License v3.0</a
        >
      </span>
    </div>
  </div>
</footer>
